{% extends 'base.html.twig' %}

{% block body %}
    <div class="wrapper-member">
        {% block sidebar %}
            {% include 'admin/sidebar.html.twig' %}
        {% endblock %}
        <div class="content main-content">{% if errors is not empty %}
                <div class="alert alert-danger">
                    <ul class="list-unstyled mb-0">
                        {% for error in errors %}
                            <li><span class="initialism form-error-icon badge badge-danger">Error</span>
                                {# <span class="form-error-message">{{ error.messageKey|trans(error.messageData, 'security') }}</span>#}
                                <span class="form-error-message">{{ error }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            {% if infos is not empty %}
                <div class="alert alert-info">
                    <ul class="list-unstyled mb-0">
                        {% for info in infos %}
                            <li><span class="initialism form-info-icon badge badge-info">Information</span>
                                <span class="form-info-message">{{ info }}</span>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            {% endif %}
            <p>Voici les utilisateurs inscrits sur Snowtricks :</p>
            <table class="table" scope="col">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Pseudo</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                <tr>
                    <td  scope="row">{{ user.id }}</td>
                    <td>{{ user.username }}</td>
                    <td>{{ user.email }}</td>
                    <td><a href="{{ path('delete_user', {'id': user.id}) }}">Supprimer</a></td>
                </tr>
                {% endfor %}
                </tbody>

            </table>
        </div>
    </div>
{% endblock %}
